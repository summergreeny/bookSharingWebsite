<div>
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>

<div>
  <label for="">Author</label>
  <!-- <select> element is used to create a dropdown list or a selection list-->
  <select name="author">
    <% authors.forEach(author => { %> <% if (author.id === book.authorId) { %>
    <option selected value="<%= author.id %>"><%= author.name %></option>
    <% } else { %>
    <option value="<%= author.id %>"><%= author.name %></option>
    <% } %> <% }) %>
  </select>
</div>

<div>
  <label>Publish Date</label>
  <input
    type="date"
    id="publishDate"
    name="publishDate"
    value="<%= book.publishDate ? book.publishDate.toISOString().split('T')[0] : '' %>"
  />
</div>

<div>
  <label>Page Count</label>
  <input type="number" name="pageCount" min = "1" value="<%= book.pageCount %>"
</div>

<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond" />
</div>

<div>
  <label>Description</label>
  <textarea name="description"><%=book.description%></textarea>
</div>
